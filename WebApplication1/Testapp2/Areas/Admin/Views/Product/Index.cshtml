@model List<WebApplication1.Models.Product>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

</head>

<body>
<div>
    @foreach (var item in Model)
    {
        <div class="card mb-2 p-3">
            <h3>Adı: @item.Name</h3>
            <p>Açıqlama: @item.Desc</p>
        <p><strong>Price: @item.Price AZN</strong></p>
        <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
            Create
        </a>
        <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">
            Edit
        </a>
        <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">
            Details
        </a>
        <form asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure')">
                Delete
            </button>
        </form>
        </div>

    }
</div>
</body>
