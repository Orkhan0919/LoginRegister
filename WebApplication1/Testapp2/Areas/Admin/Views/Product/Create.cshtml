@model WebApplication1.Models.Product
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Yeni Məhsul</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="mb-4">Yeni Məhsul Əlavə Et</h2>
            
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label class="form-label">Məhsulun Adı</label>
                <input asp-for="Name" class="form-control" placeholder="Məs: iPhone 15" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Açıqlama</label>
                <textarea asp-for="Desc" class="form-control" rows="3"></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Qiymət</label>
                <input asp-for="Price" type="number" step="0.01" class="form-control" required>
            </div>

            <button type="submit" class="btn btn-success">Yadda Saxla</button>
            <a asp-action="Index" class="btn btn-secondary">Geri Qayıt</a>
        </form>
    </div>
</div>

</body>
</html>